{
  "packages": {
    "elmPackages.elm": "latest",
    "elmPackages.elm-doc-preview": "latest",
    "elmPackages.elm-format": "latest",
    "elmPackages.elm-test": "latest"
  },
  "env": {
    "PROJECT": "$PWD",
    "PATH": "$PWD/bin:$PATH"
  },
  "shell": {
    "init_hook": [
      "alias f='elm-format src/ tests/ --yes'",
      "alias p='elm-doc-preview --port 8001'",
      "alias t='elm-test'"
    ]
  }
}
